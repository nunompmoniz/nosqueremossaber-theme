<div id="frontpage-intro">
    <div id="frontpage-intro-lead">
        <div class="frontpage-lead-cell"><h2><%= _("Exercise your right to know.") %></h2></div>
        <div class="frontpage-lead-cell"><p class="frontpage-lead-enum">1</p></div>
        <div class="frontpage-lead-cell"><p class="frontpage-lead-enum">2</p></div>
        <div class="frontpage-lead-cell"><p class="frontpage-lead-enum">3</p></div>
        <div style="clear:both"></div>

        <div class="frontpage-lead-cell"><p class="frontpage-lead-text"><%= _("To get information from public authorities:") %></p></div>
        <div class="frontpage-lead-cell"><p class="frontpage-lead-text"><%= _("Think of a question for a public authority.") %></p></div>
        <div class="frontpage-lead-cell"><p class="frontpage-lead-text"><%= _("We send the question for you") %></p></div>
        <div class="frontpage-lead-cell"><p class="frontpage-lead-text"><%= _("We'll notify you when there is an answer.") %></p></div>
        <div style="clear:both"></div>

        <div class="frontpage-lead-cell short"></div>
        <div class="frontpage-lead-cell short">
            <span id="frontpage-lead-button"><%= link_to _("Ask") + " »", list_public_bodies_default_path %></span>
        </div>
        <div class="frontpage-lead-cell short"></div>
        <div class="frontpage-lead-cell short">
            <%= link_to _("Will they answer?") + "»", help_requesting_path(:anchor => 'making_requests') %>
        </div>
    </div>

    <div id="frontpage-intro-sidebar">
        <div id="frontpage-lead-ad">
          <h4>Header header header header </h4>
          <p>text</p>
          <p>text</p>
          <p>text</p>
          <p>text</p>
          <p>text</p>
          <p>text</p>
          <p>text</p>
          <p>text</p>
        </div>

        <div id="frontpage-share-buttons">
<iframe src="//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2F<%= site_name %>&amp;send=false&amp;layout=button_count&amp;width=118&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:118px; height:21px;" allowTransparency="true"></iframe>
          <span>
          <a href="https://twitter.com/share" class="twitter-share-button" data-url="" data-lang="it">Tweet</a>
          <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
          </span>

        </div>
    </div>
    <div style="clear:both"></div>
</div>
<div id="frontpage-content">
    <div id="frontpage-inner-content">
        <div id="frontpage-search-box">
            <h4><%=  _("Search over<br/>
            <strong>{{number_of_requests}} requests</strong> <span>and</span><br/>
            <strong>{{number_of_authorities}} authorities</strong>",
            :number_of_requests => InfoRequest.visible.count, :number_of_authorities => PublicBody.visible.count) %></h4>

            <div id="frontpage-search-form">
              <%= form_tag({:action => "search_redirect"}, {:id => "search_form"}) do %>
              <div>
                <%= text_field_tag 'query', params[:query], { :size => 80 } %>
                <%= submit_tag _('Search') %>
              </div>
              <% end %>
            </div>
        </div>

        <div id="frontpage-updates">
            <div id="frontpage-updates-news">
                <h2><a href="http://blog.tuderechoasaber.es" target="_blank"><%= _("Novedades") %></a></h2>
                <% 0.upto(3).each do |position|
                    item = @blog_items[position];
                    break if item.nil? %>

                  <div class="frontpage-blog-post <%= position.even? ? 'left' : 'right' %>">
                    <img src="<%= item['thumbnail'][0] %>" width="278" height="128"/>
                    <h4>
                      <a href='<%= item['link'][0] %>' target="_blank"><%= h item['title'][0] %></a>
                    </h4>
                    <p><%= item['description'][0].to_s %></p>
                    <p><a href="<%= item['link'][0] %>" target="_blank"><%= _("Leer más »") %></a></p>
                  </div>

                  <% if position.odd? %>
                  <div style="clear:both"></div>
                  <% end %>
                <% end %>

                <div class="link-arrow"><a href="http://blog.tuderechoasaber.es" target="_blank"><%= _("Más novedades »") %></a></div>
            </div>

            <div id="frontpage-updates-requests">
                <h2><%= _("Peticiones destacadas") %></h2>
                <% @featured_requests.each do |featured_request| %>
                <%= render :partial => 'track/tracking_links',
                      :locals => {
                        :track_thing => TrackThing.create_track_for_request(featured_request),
                        :own_request => featured_request.user == @user,
                        :location => "frontpage"
                      } %>
                <% end %>
            </div>

            <div style="clear:both"></div>
    </div>
</div>

